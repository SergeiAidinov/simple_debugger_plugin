<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.gmail.aydinov.sergey.simple_debugger_plugin">

    <!-- Команда открытия Simple Debugger -->
    <extension point="org.eclipse.ui.commands">
        <command
            id="com.gmail.aydinov.sergey.simple_debugger_plugin.commands.simpleDebug"
            name="Simple Debugger"
            description="Запуск Simple Debugger"
            categoryId="org.eclipse.ui.category.debug">
        </command>
    </extension>

    <!-- Хэндлер команды -->
    <extension point="org.eclipse.ui.handlers">
        <handler
            class="com.gmail.aydinov.sergey.simple_debugger_plugin.core.SimpleDebugHandler"
            commandId="com.gmail.aydinov.sergey.simple_debugger_plugin.commands.simpleDebug">
        </handler>
    </extension>

    <!-- Меню: правая кнопка по проекту -->
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
            <command
                commandId="com.gmail.aydinov.sergey.simple_debugger_plugin.commands.simpleDebug"
                label="Simple Debugger"
                style="push">
            </command>
        </menuContribution>
    </extension>

    <!-- View окна дебаггера -->
    <extension point="org.eclipse.ui.views">
        <view
            name="Debug Window"
            icon="/icons/Sample.png"
            category="com.gmail.aydinov.sergey.simple_debugger_plugin"
            class="com.gmail.aydinov.sergey.simple_debugger_plugin.ui.DebugWindow"
            id="com.gmail.aydinov.sergey.simple_debugger_plugin.ui.debugWindow">
        </view>
    </extension>

</plugin>
