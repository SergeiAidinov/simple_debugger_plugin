<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.gmail.aydinov.sergey.simple_debugger_plugin">

    <extension point="org.eclipse.ui.commands">
        <command
            id="com.gmail.aydinov.sergey.simple_debugger_plugin.simpleDebug"
            name="Simple Debugger"
            description="Запуск Simple Debugger" />
    </extension>

    <extension point="org.eclipse.ui.handlers">
        <handler
            commandId="com.gmail.aydinov.sergey.simple_debugger_plugin.simpleDebug"
            class="com.gmail.aydinov.sergey.simple_debugger_plugin.SimpleDebugPluginStarter" />
    </extension>

    <!-- ВСТАВЛЯЕМСЯ В РЕАЛЬНОЕ МЕНЮ RUN -->
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="menu:org.eclipse.ui.run?after=additions">
            <command
                commandId="com.gmail.aydinov.sergey.simple_debugger_plugin.simpleDebug"
                label="Simple Debugger"
                style="push" />
        </menuContribution>
    </extension>

</plugin>
